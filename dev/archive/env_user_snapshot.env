# === MontrixBot REAL prep (template) ===
# Copy this file to .env and fill YOUR real API keys before enabling REAL mode.
# Do NOT commit your real keys to any repository.

# Binance API
BINANCE_API_KEY=
BINANCE_SECRET=
BINANCE_BASE=https://api.binance.com
BINANCE_RECV_WINDOW=5000

# Bot defaults
MONTRIX_MODE=REAL            # SIM or REAL
MONTRIX_DRY_RUN=TRUE         # true = do not send real orders even in REAL mode
MONTRIX_SYMBOLS=ADAUSDT,HBARUSDT,BONKUSDT
MONTRIX_TPSL_TP_PCT=0.02
MONTRIX_TPSL_SL_PCT=0.01
MONTRIX_TPSL_TRAIL_ACTIVATE_PCT=0.015
MONTRIX_TPSL_TRAIL_STEP_PCT=0.005
